# ============================================================================
# QUANTUM TRADER PRO - Environment Configuration Template
# ============================================================================
# COPY THIS FILE TO .env AND FILL IN YOUR VALUES
# cp .env.example .env
#
# IMPORTANT: NEVER commit .env to version control!
# Make sure .env is in your .gitignore file.
# ============================================================================

# ============================================================================
# BINANCE API CONFIGURATION
# ============================================================================

# OPTION 1: TESTNET with RSA Keys (Recommended for development)
# Generate RSA keys: openssl genrsa -out test-prv-key.pem 2048
# Extract public key: openssl rsa -in test-prv-key.pem -pubout -out test-pub-key.pem
# Register public key at: https://testnet.binance.vision/
BINANCE_API_KEY=your_testnet_api_key_here
BINANCE_PRIVATE_KEY_PATH=test-prv-key.pem
BINANCE_TESTNET=true

# OPTION 2: PRODUCTION with HMAC (Real money - USE WITH CAUTION!)
# Get your API keys from: https://www.binance.com/en/my/settings/api-management
# BINANCE_API_KEY=your_production_api_key_here
# BINANCE_SECRET_KEY=your_production_secret_key_here
# BINANCE_TESTNET=false

# ============================================================================
# TRADING CONFIGURATION
# ============================================================================

# Initial capital in quote currency (usually USDT)
INITIAL_CAPITAL=1000

# Primary trading pair
SYMBOL=BTC/USDT

# Risk Management
MAX_RISK_PER_TRADE=1.0       # Percentage of capital to risk per trade (recommended: 1-2%)
MAX_DAILY_LOSS=5.0           # Stop trading if daily loss exceeds this % (recommended: 5-10%)
MAX_POSITIONS=3              # Maximum simultaneous positions (recommended: 1-5)

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# SQLite (default - good for development)
DATABASE_URL=sqlite:///./trading.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/quantum_trader

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

LOG_LEVEL=INFO               # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_TO_FILE=true
LOG_FILE_PATH=logs/trading.log

# ============================================================================
# MACHINE LEARNING (Optional)
# ============================================================================

ML_ENABLED=false             # Enable ML-based predictions
ML_UPDATE_INTERVAL=86400     # Model update interval in seconds (86400 = 24h)
ML_MIN_CONFIDENCE=0.65       # Minimum confidence for ML signals

# ============================================================================
# MONITORING & NOTIFICATIONS (Optional)
# ============================================================================

# Telegram Bot
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# ============================================================================
# PERFORMANCE & CACHING
# ============================================================================

ENABLE_PROFILING=false
CACHE_ENABLED=true
CACHE_TTL=300                # Cache time-to-live in seconds

# ============================================================================
# SECURITY
# ============================================================================

ENCRYPT_SENSITIVE_DATA=true
SESSION_TIMEOUT=3600         # Session timeout in seconds (3600 = 1h)

# ============================================================================
# ADVANCED SETTINGS
# ============================================================================

# Strategy weights (must sum to 1.0)
ICHIMOKU_WEIGHT=0.4
GRID_WEIGHT=0.3
DCA_WEIGHT=0.3

# Circuit breaker
CIRCUIT_BREAKER_MAX_LOSSES=3
CIRCUIT_BREAKER_COOLDOWN=3600

# ============================================================================
# DO NOT MODIFY - System Configuration
# ============================================================================
VERSION=1.0.0
ENV_LOADED=true
